mixin colorselect(n)
    .color-wrap
        label(class="number-label")= n
        input(class="color-input" type="color" id="n"+n)
        div(class="undo" id="u"+n) &#8634;

-var n = 0;

doctype html
html
    head
        title #{title}
        link(rel="stylesheet" href="options.css")
    body
        .row
            #activeToggle
        #digits
            while n < 10
                +colorselect(n++)
        #bgwrap
            input(id="bg" type="range" min=0 max=255)
            input(id="usebg" type="checkbox")
            label background
        script(src="js/options.js")